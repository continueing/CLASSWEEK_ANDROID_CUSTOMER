<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="115dp"
    android:paddingRight="13dp"
    android:background="@drawable/bg_item_style">

    <com.loopj.android.image.SmartImageView
        android:id="@+id/siv_class_summary_info_front"
        android:layout_width="109dp"
        android:scaleType="fitXY"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="11dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_class_summary_info_title"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:text="삼성 댄스학원 줌바 초급 수업"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="#1f2129"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginTop="6dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="12dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_content_time"/>
            <TextView
                android:id="@+id/tv_class_summary_info_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="11sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="#1f2129"
                android:layout_marginLeft="5dp"
                android:text="월 오후 7시, 수 오후 9시(1시간 30분)"/>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="12dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_content_rocation"/>
            <TextView
                android:id="@+id/tv_class_summary_info_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="11sp"
                android:textColor="#1f2129"
                android:layout_marginLeft="5dp"
                android:text="헤이브리드(삼성역)"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_class_summary_info_day_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="12000원"
            android:textSize="14sp"
            android:textColor="#f25354"
            android:layout_marginTop="11.5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_class_summary_info_month_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="150000원"
                android:textSize="14sp"
                android:textColor="#f25354"/>
            <LinearLayout
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_discount">
                <ImageView
                    android:layout_marginLeft="4dp"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/arrow_discount"/>
                <TextView
                    android:id="@+id/tv_class_summary_info_discount_ratio"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:text="20%"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>