<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="150dp">

    <com.loopj.android.image.SmartImageView
        android:id="@+id/siv_class_summary_info_front"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:background="#a2fbff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:orientation="vertical"
        android:background="#ffd257">
        <TextView
            android:id="@+id/tv_class_summary_info_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="삼성 댄스학원 줌바 초급 수업"
            android:layout_marginTop="3dp"/>
        <TextView
            android:id="@+id/tv_class_summary_info_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="월 오후 7시, 수 오후 9시(1시간 30분)"
            android:layout_marginTop="3dp"/>
        <TextView
            android:id="@+id/tv_class_summary_info_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="헤이브리드(삼성역)"
            android:layout_marginTop="3dp"/>
        <TextView
            android:id="@+id/tv_class_summary_info_day_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12000원"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/tv_class_summary_info_month_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="150000원"
            android:layout_marginTop="3dp"/>
    </LinearLayout>

</LinearLayout>