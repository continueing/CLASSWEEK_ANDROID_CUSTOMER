<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${packageName}.${activityClass}"
    android:background="#7f000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="258.5dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_content"
        android:paddingLeft="12.5dp"
        android:paddingRight="12.5dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="38dp">
            <TextView
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#282a34"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:text="클래스 예약"/>
            <Button
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:text="취소"
                android:textSize="14sp"
                android:background="@drawable/bg_content"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_booking_class_type_selection"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_dropdown_style">
            <TextView
                android:id="@+id/tv_booking_selected_class_type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="17dp"
                android:text="@string/class_selection"
                android:textColor="#747788"
                android:textSize="16sp"/>
            <ImageView
                android:layout_width="19dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="13dp"
                android:background="@drawable/arrow_dropdown"/>
            <TextView
                android:id="@+id/tv_booking_selected_class_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:layout_marginRight="41dp"
                android:textSize="16dp"
                android:textColor="#f25354" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_booking_schedule_selection"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_dropdown_style">
            <TextView
                android:id="@+id/tv_booking_selected_schedule"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="17dp"
                android:text="@string/schedule_selection"
                android:textColor="#747788"
                android:textSize="16sp"/>
            <ImageView
                android:layout_width="19dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="13dp"
                android:background="@drawable/arrow_dropdown"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="27.5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <com.blackpigstudio.classweek.main.module.widget.button.SubmitButton
                android:id="@+id/bt_booking_payment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="결제하기"
                android:gravity="center"
                android:textColor="#ffffff"
                android:background="@drawable/btn_02_style"/>
            <ProgressBar
                android:id="@+id/pg_booking_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:layout_centerInParent="true"/>
        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>
