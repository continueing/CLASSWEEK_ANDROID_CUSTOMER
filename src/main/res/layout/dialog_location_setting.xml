<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="257dp">
    <LinearLayout
        android:id="@+id/ll_location_dialog_title"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingLeft="21dp"
        android:paddingRight="21dp"
        android:paddingBottom="8dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#8a8fa7"
            android:text="위치"/>
        <TextView
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#1f2129"
            android:text="클래스를 수강하고 싶은 위치입니다."/>
        </LinearLayout>
    <View
        android:id="@+id/v_location_dialog_line"
        android:layout_below="@+id/ll_location_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ffd8d9e3"/>
    <RadioGroup
        android:id="@+id/rg_filter_location_list"
        android:layout_below="@+id/v_location_dialog_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="#ffd8d9e3"
        android:gravity="center_horizontal">
        <RadioButton
            android:id="@+id/rb_filter_location_gangnam"
            android:layout_width="match_parent"
            android:layout_height="49.5dp"
            android:paddingLeft="21dp"
            android:paddingRight="21dp"
            android:textSize="15sp"
            android:button="@null"
            android:drawableRight="@drawable/btn_check_style"
            android:background="@drawable/bg_dropdown_style"
            android:checked="true"
            android:gravity="center_vertical"
            android:text="@string/location_gangnam"/>
        <RadioButton
            android:id="@+id/rb_filter_location_gangbuk"
            android:layout_width="match_parent"
            android:layout_height="49.5dp"
            android:textSize="15sp"
            android:button="@null"
            android:paddingLeft="21dp"
            android:paddingRight="21dp"
            android:drawableRight="@drawable/btn_check_style"
            android:background="@drawable/bg_dropdown_style"
            android:gravity="center_vertical"
            android:text="@string/location_gangbuk"/>
    </RadioGroup>
    <View
        android:layout_below="@+id/rg_filter_location_list"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ffd8d9e3"/>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/bt_filter_location_select"
            android:layout_width="219dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:background="@drawable/btn_02_style"
            android:text="확인"/>
    </LinearLayout>
</RelativeLayout>