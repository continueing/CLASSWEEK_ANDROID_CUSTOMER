<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.blackpigstudio.classweek.main.ui.navigation_drawer_menu.NavigationDrawerFragment"
    android:background="@drawable/bg_popup"
    android:alpha="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ListView
            android:id="@+id/lv_navigation_drawer_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:choiceMode="singleChoice"
            android:divider="#ffd8d9e3"
            android:dividerHeight="0.5dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#ffd8d9e3"/>
    </LinearLayout>


    <ImageView
        android:layout_width="40dp"
        android:layout_height="22.5dp"
        android:layout_gravity="left|bottom"
        android:src="@drawable/logo_drawer"
        android:layout_marginLeft="14dp"
        android:layout_marginBottom="17dp"
        />
</FrameLayout>



