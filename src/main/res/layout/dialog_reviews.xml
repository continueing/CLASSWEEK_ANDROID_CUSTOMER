<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="334dp"
    android:layout_height="575dp">
    <TextView
        android:id="@+id/tv_dialog_review_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="21dp"
        android:gravity="center_vertical|left"
        android:text="전체 리뷰 보기"
        android:textColor="#1f2129"
        android:background="#ffffff"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ffd8d9e3"/>
    <ListView
        android:id="@+id/lv_dialog_reviews"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:background="#fff4f5fa">
    </ListView>
</LinearLayout>