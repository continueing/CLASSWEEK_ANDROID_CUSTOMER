<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.blackpigstudio.classweek.main.ui.menu.home.class_summary_info_inventory.filter.FilterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true">
        <RelativeLayout
            android:id="@+id/rl_filter_location_setting"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@drawable/bg_item_style">
            <ImageView
                android:id="@+id/iv_filter_location_icon"
                android:layout_marginLeft="15dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_content_rocation"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/iv_filter_location_icon"
                android:layout_marginLeft="6dp"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:textColor="#1f2129"
                android:text="위치"/>
            <ImageView
                android:id="@+id/iv_filter_location_setting_arrow_icon"
                android:layout_width="13dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="14dp"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_rocation"
                />
            <TextView
                android:id="@+id/tv_filter_location"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="11dp"
                android:gravity="center_vertical"
                android:layout_toLeftOf="@+id/iv_filter_location_setting_arrow_icon"
                android:textSize="15sp"
                android:textColor="#1f2129"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#ffd8d9e3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_content_day"
                    />
                <TextView
                    android:text="요일"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:gravity="center_vertical"
                    android:id="@+id/textView"
                    android:textSize="14sp"
                    android:textColor="#1f2129" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="5dp">

                <com.blackpigstudio.classweek.main.module.button.CheckButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="월"
                    android:textSize="15sp"
                    android:textColor="#ffffffff"
                    android:id="@+id/cb_mon" />

                <com.blackpigstudio.classweek.main.module.button.CheckButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="화"
                    android:textSize="15sp"
                    android:textColor="#ffffffff"
                    android:layout_marginLeft="16dp"
                    android:id="@+id/cb_tue" />

                <com.blackpigstudio.classweek.main.module.button.CheckButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="수"
                    android:textSize="15sp"
                    android:textColor="#ffffffff"
                    android:layout_marginLeft="16dp"
                    android:id="@+id/cb_wen"
                    />

                <com.blackpigstudio.classweek.main.module.button.CheckButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="목"
                    android:textSize="15sp"
                    android:textColor="#ffffffff"
                    android:layout_marginLeft="16dp"
                    android:id="@+id/cb_thu" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginBottom="15dp">

                <com.blackpigstudio.classweek.main.module.button.CheckButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="금"
                    android:textSize="15sp"
                    android:textColor="#ffffffff"
                    android:id="@+id/cb_fri"/>

                <com.blackpigstudio.classweek.main.module.button.CheckButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="토"
                    android:textSize="15sp"
                    android:textColor="#ffffffff"
                    android:layout_marginLeft="16dp"
                    android:id="@+id/cb_sat" />

                <com.blackpigstudio.classweek.main.module.button.CheckButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="일"
                    android:textSize="15sp"
                    android:textColor="#ffffffff"
                    android:layout_marginLeft="16dp"
                    android:id="@+id/cb_sun" />s
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#ffd8d9e3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_content_time"
                    />
                <TextView
                    android:text="시간"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:textColor="#1f2129" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:orientation="horizontal"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="15dp">
                <com.blackpigstudio.classweek.main.module.button.CheckButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="오전(06시-12시)"
                    android:textSize="13sp"
                    android:textColor="#ffffffff"
                    android:id="@+id/cb_morning" />
                <com.blackpigstudio.classweek.main.module.button.CheckButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:text="점심(12시-18시)"
                    android:textSize="13sp"
                    android:textColor="#ffffffff"
                    android:id="@+id/cb_daytime" />
                <com.blackpigstudio.classweek.main.module.button.CheckButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:text="저녁(18시-24시)"
                    android:textSize="13sp"
                    android:textColor="#ffffffff"
                    android:id="@+id/cb_evening" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#ffd8d9e3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">
                <ImageView
                    android:id="@+id/iv_filter_price"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_content_price"
                    />
                <TextView
                    android:text="가격(한 달 기준)"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:gravity="center_vertical"
                    android:layout_toRightOf="@+id/iv_filter_price"
                    android:textColor="#1f2129"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tv_filter_seekbar_value"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:textColor="#f25354"
                    android:text="10000원"/>
            </RelativeLayout>

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="8dp"
                android:max="250000"
                android:progress="100000"
                android:thumb="@drawable/btn_progress"
                android:id="@+id/sb_price_controller"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#ffd8d9e3"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:padding="8dp"
        android:orientation="horizontal"
        android:background="#ff37373d"
        android:id="@+id/relativeLayout">
            <Button
                android:layout_alignParentLeft="true"
                android:layout_marginRight="10dp"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:text="초기화"
                android:background="@drawable/btn_01_style"
                android:id="@+id/bt_filter_reset"
                android:textColor="#ffffff"
                android:textSize="17sp" />
            <Button
                android:layout_marginLeft="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:text="검색"
                android:background="@drawable/btn_02_style"
                android:id="@+id/bt_filter_search"
                android:textColor="#ffffff"
                android:textSize="17sp" />
    </RelativeLayout>

</RelativeLayout>
