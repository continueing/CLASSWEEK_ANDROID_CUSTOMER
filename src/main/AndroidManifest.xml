<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.blackpigstudio.classweek" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-library android:name="com.google.android.analytics" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/classweek_icon_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.blackpigstudio.classweek.main.ui.MainActivity"
            android:label="@string/title_section1"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.blackpigstudio.classweek.main.ui.menu.home.class_summary_info_inventory.filter.FilterActivity"
            android:label="@string/title_activity_filter"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.blackpigstudio.classweek.main.ui.menu.home.class_summary_info_inventory.ClassSummaryInfoInventoryActivity"
            android:label="@string/title_activity_class_summray_info_inventory"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.blackpigstudio.classweek.main.ui.menu.home.class_detail_info.ClassDetailInfoActivity"
            android:label="@string/title_activity_class_detail_info"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.blackpigstudio.classweek.main.ui.admin.SignInAndUpActivity"
            android:label="@string/title_activity_sign_in_and_up"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible|adjustPan" >
        </activity>
        <activity
            android:name="com.blackpigstudio.classweek.main.ui.menu.home.class_detail_info.inquiry.InquiryActivity"
            android:label="@string/title_activity_inquiry"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible" >
        </activity>
        <activity
            android:name="com.blackpigstudio.classweek.main.ui.menu.home.class_detail_info.order_confirmation.OrderConfirmationActivity"
            android:label="@string/title_activity_order_confirmation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="com.blackpigstudio.classweek.main.ui.menu.home.class_detail_info.booking.BookingActivity"
            android:label="@string/title_activity_booking"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
        </activity>
        <activity
            android:name="com.blackpigstudio.classweek.main.ui.menu.home.class_detail_info.payment.PaymentWebViewActivity"
            android:label="@string/title_activity_payment_web_view"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="175.126.82.184"
                    android:scheme="classweek" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.blackpigstudio.classweek.main.ui.etc.SplashActivity"
            android:label="@string/title_activity_splash"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.blackpigstudio.classweek.main.ui.etc.UserGuideActivity"
            android:label="@string/title_activity_user_guide"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
        </activity>
        <activity
            android:name="com.blackpigstudio.classweek.main.ui.admin.FrontActivity"
            android:label="@string/title_activity_front" >
        </activity>
    </application>

</manifest>
